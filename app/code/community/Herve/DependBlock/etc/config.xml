<config>
    <modules>
        <Herve_DependBlock>
            <version>0.1.0</version>
        </Herve_DependBlock>
    </modules>
    <global>
        <blocks>
            <herve_dependblock>
                <class>Herve_DependBlock_Block</class>
            </herve_dependblock>
        </blocks>
        <helpers>
            <herve_dependblock>
                <class>Herve_DependBlock_Helper</class>
            </herve_dependblock>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <herve_dependblock after="Mage_Adminhtml">Herve_DependBlock_Adminhtml</herve_dependblock>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>